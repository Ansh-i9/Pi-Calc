class LcdApi:
    def __init__(self, num_rows, num_cols):
        self.num_rows = num_rows
        self.num_cols = num_cols
        self.cursor_x = 0
        self.cursor_y = 0

    def clear(self):
        self.write_cmd(0x01)
        self.cursor_x = 0
        self.cursor_y = 0

    def putstr(self, string):
        for ch in string:
            if ch == '\n':
                self.cursor_x = 0
                self.cursor_y += 1
            else:
                self.putchar(ch)

    def putchar(self, ch):
        self.write_data(ord(ch))
        self.cursor_x += 1
        if self.cursor_x >= self.num_cols:
            self.cursor_x = 0
            self.cursor_y += 1
